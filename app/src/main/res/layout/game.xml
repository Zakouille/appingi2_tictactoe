<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".Game">


    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Turn:"
        android:id="@+id/guest_label"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/guest_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/guest_name"
        app:layout_constraintBottom_toBottomOf="@id/guest_name"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/guest_name"
        android:text="X (Guest)"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/guest_label"

        android:textStyle="bold" android:textSize="36sp" android:textColor="@android:color/black"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_label"
        android:layout_marginRight="10dp"
        android:text="Player Turn:"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_name"
        app:layout_constraintBottom_toBottomOf="@id/player_name"
        />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/player_name"
        app:layout_constraintLeft_toLeftOf="@id/guest_name"
        app:layout_constraintLeft_toRightOf="@id/player_label"
        app:layout_constraintTop_toBottomOf="@id/guest_name"
        android:textStyle="bold" android:textSize="36sp" android:textColor="@android:color/black"
        />

    <GridLayout android:layout_width="230dp" android:layout_height="230dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:rowCount="3"
        android:columnCount="3"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

        <TextView
            android:id="@+id/case_1"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"

            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/case_2"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            android:textSize="14sp"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/case_3"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/case_4"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/case_5"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/case_6"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/case_7"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/case_8"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />
        <TextView
            android:id="@+id/case_9"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:layout_width="70dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="@android:color/black" android:textStyle="bold"
            />

    </GridLayout>
</android.support.constraint.ConstraintLayout>