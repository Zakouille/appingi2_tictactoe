<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epita.zakary.appingi2_tictactoe.MainActivity">

    <ImageView android:layout_width="225dp"
        android:layout_height="225dp"
        android:id="@+id/img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_tictactoe"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/desc"
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="One app, one game. Made by Zakary Nizard for Android exam on Dec 17th, 2018."
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:layout_editor_absoluteX="17dp" />

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Please enter your name:"
        app:layout_constraintTop_toBottomOf="@id/desc"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="356dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/input"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:id="@+id/epita"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="28dp"
        android:src="@drawable/img_epita"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="made at"
        app:layout_constraintBottom_toBottomOf="@id/epita"
        app:layout_constraintRight_toLeftOf="@id/epita"
        app:layout_constraintTop_toTopOf="@id/epita"
        app:layout_constraintVertical_bias="0.451" />

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        android:id="@+id/startButton"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit"/>


</android.support.constraint.ConstraintLayout>
